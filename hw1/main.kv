#: import utils kivy.utils
#: import Metrics kivy.metrics.Metrics
#: import Window kivy.core.window.Window

<Label>
    size_hint: None, None
    font_size: self.height * 0.4
    text_size: self.size
    width: 110 * Metrics.dp
    height: 50 * Metrics.dp
    halign: 'center'
    valign: 'center'

<TextInput>
    size_hint: None, None
    font_size: self.height * 0.6
    text_size: self.size
    width: 250 * Metrics.dp
    height: 50 * Metrics.dp
    halign: 'center'
    valign: 'center'

<InputName>
    size_hint: None, None
    font_size: self.height * 0.6
    text_size: self.size
    width: 250 * Metrics.dp
    height: 50 * Metrics.dp
    halign: 'center'
    valign: 'center'

<FixedSpinner@SpinnerOption>
    size_hint: None, None
    font_size: self.height * 0.6
    width: 250 * Metrics.dp
    valign: 'center'

<InputPhone>
    size_hint: None, None
    font_size: self.height * 0.6
    text_size: self.size
    width: 250 * Metrics.dp
    height: 50 * Metrics.dp
    halign: 'center'
    valign: 'center'

<AltCheckBox>
    size_hint: None, None
    width: 35 * Metrics.dp
    height: 50 * Metrics.dp

<CheckBoxLabel@Label>
    size_hint: None, None
    font_size: self.height * 0.3
    text_size: self.size
    width: 180 * Metrics.dp
    height: 60 * Metrics.dp
    halign: 'left'
    valign: 'center'
    color: 0, 0, 0, 1

<Button>
    size_hint: None, None
    font_size: self.height * 0.6
    text_size: self.size
    # width: 180 * Metrics.dp -- this messed up spinner dropdowns
    height: 50 * Metrics.dp
    halign: 'center'
    valign: 'center'

<MainLayout>
    name: name
    age_range: age_range
    phone_number: phone_number

    # switching to grid layout for the app
    GridLayout:
        cols: 1
        size: root.width, root.height
        row_force_default: True
        row_default_height: 50 * Metrics.dp
        padding: 5 * Metrics.dp

        # Non-Bottom Button part of the app
        GridLayout:
            cols: 2
            padding: 10 * Metrics.dp
            spacing: 10 * Metrics.dp

            # Name Section
            Label:
                text: 'Name'
            InputName:
                id: name
                multiline: False
                hint_text: 'First Last'
        
            # Age Section
            Label:
                text: 'Age'
            Spinner:
                id: age_range
                text: 'Select Age Range'
                option_cls: 'FixedSpinner'
                font_size: self.height * 0.5
                values: ['0-17', '18-24', '25-40', '41+']
                size_hint_x: None
                width: 250 * Metrics.dp
                # sync_height: True

            # Gender Section
            Label:
                height: 250 * Metrics.dp
				font_size: (50 * Metrics.dp) * 0.4
                valign: 'center'
                text: 'Gender'
            GridLayout:
                cols: 2
                size: (250 * Metrics.dp, self.minimum_height)
                padding: [(15 * Metrics.dp), (20 * Metrics.dp), (15 * Metrics.dp), (30 * Metrics.dp)]
                spacing: 10 * Metrics.dp

                canvas.before:
                    Color:
                        rgba: (254/255.0), (225/255.0), (219/255.0), 1
                    Rectangle:
                        pos: self.pos
                        size: (250, self.minimum_height)

                # trans/nb/other
                AltCheckBox:
                    on_active: root.checkbox_click(self, self.active, 'Other')
                CheckBoxLabel:
                    text: 'Transgender, Non-Binary, or Other Gender'

                # female
                AltCheckBox:
                    on_active: root.checkbox_click(self, self.active, 'Female')
                CheckBoxLabel:
                    text: 'Female'

                # male
                AltCheckBox:
                    on_active: root.checkbox_click(self, self.active, 'Male')
                CheckBoxLabel:
                    text: 'Male'
            
            # Phone #
            Label:
                text: 'Phone Number'
            InputPhone:
                id: phone_number
                hint_text: '(555) 555-5555'

    # Submit & Cancel Buttons
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: [10 * Metrics.dp, 20 * Metrics.dp, 10 * Metrics.dp, 2 * Metrics.dp]
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20 * Metrics.dp

            # Submit Button
            Button:
                id: submit
                text: 'Submit'
                width: 180 * Metrics.dp
                on_press: root.submit_data()

            # Cancel Button
            Button:
                text: 'Cancel'
                width: 180 * Metrics.dp
                on_press: app.stop()

            
            
                



